generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model DetailCustomer {
  id                 Int @id @default(autoincrement())
  order_id           String
  product_name       String
  first_name         String
  last_name          String
  user_email         String
  user_phoneNumber   String
  food_halal_non     String
  food_vegan         String
  food_beef          String
  add_notes          String

  @@unique([order_id])
}